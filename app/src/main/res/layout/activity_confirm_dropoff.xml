<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <!-- Hamburger Menu -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            app:tint="@android:color/black" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Confirm Drop-off"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Customer Details -->
    <LinearLayout
        android:id="@+id/customerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:padding="16dp">

        <!-- Title + Edit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Details"
                android:textSize="13sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/tvEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Edit"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#E53935" />
        </LinearLayout>

        <!-- Name + Notes -->
        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charlene Joy Tolentino"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nakalista dapat dyan yung 11 na orders mo scroll down yan"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <!-- Address -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="4dp"
                app:tint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hagonoy Bulacan"
                android:textSize="13sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#DDDDDD" />
    </LinearLayout>

    <!-- Proof of Drop-off -->
    <LinearLayout
        android:id="@+id/proofSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/customerDetails"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp">

        <!-- Title + Add Photo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proof of Drop-off"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Add Photo"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#E53935" />
        </LinearLayout>

        <!-- Instructions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a photo as proof of drop-off"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required"
            android:textSize="12sp"
            android:textColor="#E53935"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirmDropOff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/btn_disabled_bg"
        android:text="Confirm Drop - Off"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:enabled="false" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="#F7F7F7"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Status"
            android:textSize="12sp"
            android:textColor="#000000"
            android:drawableTop="@android:drawable/ic_menu_agenda" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Deliveries"
            android:textSize="12sp"
            android:textColor="#E53935"
            android:drawableTop="@android:drawable/ic_menu_directions" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="History"
            android:textSize="12sp"
            android:textColor="#000000"
            android:drawableTop="@android:drawable/ic_menu_recent_history" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Wallets"
            android:textSize="12sp"
            android:textColor="#000000"
            android:drawableTop="@android:drawable/ic_menu_sort_by_size" />
    </LinearLayout>

</RelativeLayout>
