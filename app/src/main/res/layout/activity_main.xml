<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F32C2C">

    <!-- Main Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="273dp"
        android:layout_height="311dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/cindys_logo"
        android:contentDescription="Cindys Logo" />

    <!-- Rider Pic (below logo, above subtitle) -->
    <ImageView
        android:id="@+id/imgRider"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_delivery_rider"
        android:contentDescription="Delivery Rider" />

    <!-- Subtitle under rider pic -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgRider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="DELIVERY APP"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium" />

    <!-- Start Button (pinned to bottom) -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#F8D84A"
        android:text="START"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium" />

</RelativeLayout>
